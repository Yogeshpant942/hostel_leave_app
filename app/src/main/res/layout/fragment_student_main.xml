<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_logout"
        android:src="@drawable/ic_logout"
        android:contentDescription="Logout"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Row -->
    <LinearLayout
        android:id="@+id/llWelcomeRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Welcome,"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#2D2D2D" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvName"
            android:layout_height="24dp"
            android:text="Student"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="6dp"
            android:textColor="#2D2D2D" />
    </LinearLayout>

    <!-- Roll No -->
    <TextView
        android:id="@+id/tvRollNo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Roll No: 21BITXXXX"
        android:textSize="14sp"
        android:textColor="#7A7A7A"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/llWelcomeRow"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Leave Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLeaveStatus"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvRollNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tvLeaveStatus"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Leave Status: Pending"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2D2D2D" />

            <TextView
                android:id="@+id/tvLeaveCount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="This Month: 2 / 4 Used"
                android:textSize="14sp"
                android:textColor="#7A7A7A"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Functional Buttons in CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardLeaveStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:background="#FFFFFF"
            android:padding="16dp">

            <Button
                android:id="@+id/btnApplyLeave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:text="Apply Leave"
                android:textStyle="bold"
                android:backgroundTint="#D2706B"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnLeaveHistory"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:text="Leave History"
                android:textStyle="bold"
                android:backgroundTint="#D2706B"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnContactAdmin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_columnSpan="2"
                android:text="Contact Admin"
                android:textStyle="bold"
                android:backgroundTint="#6A1B1B"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end" />

        </GridLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
